- cache(group + "three_list") do
  .one
    - data("#{group}.products").split.each do |product|
      .three
        %p
          %strong
            = raw  t("#{group}.#{product}.header")
        - if has_sub(sub = "#{group}.#{product}.sub_header")
          %p
            %em
              = raw  t(sub)
        .bottom
          =image_tag "#{group}/#{product}.jpg"
        %p
          = raw  t("#{group}.#{product}.main")
        - if has_sub(fact = "#{group}.#{product}.fact")
          .fact
            = raw  t( fact )
        = render :partial => "link" , :locals => {:link => "#{group}.#{product}.link" , :vegan => "#{group}.#{product}.vegan"}
